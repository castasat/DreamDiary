<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@drawable/sky_background"
  android:paddingTop="36dp"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:showIn="@layout/include_main_app_bar_layout">
  
  <!-- Current date slider -->
  <include
    layout="@layout/include_main_app_bar_calendar_toolbar_current_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
  <!-- Current date slider -->
  
  
  <!-- Of month text and week day text -->
  <include
    layout="@layout/include_main_app_bar_calendar_toolbar_of_month_and_week_day"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
  <!-- / Of month text and week day text -->
  
  <!-- Moon phase text -->
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/moonPhaseTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1-я фаза. Новолуние"
    android:textColor="@color/white"
    android:textSize="12sp"
    android:textStyle="normal"
    app:fontFamily="sans-serif"
    app:layout_constraintBottom_toTopOf="@id/monthLabelTextView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ofMonthTextView" />
  <!-- / Moon phase text -->
  
  <!-- TODO AddDay button -->
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/addDayButtonImageView"
    android:layout_width="100dp"
    android:layout_height="32dp"
    android:layout_margin="28dp"
    app:layout_constraintEnd_toStartOf="@id/addDreamButtonImageView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/moonPhaseTextView"
    app:srcCompat="@drawable/white_oval" />
  <!-- TODO / AddDay button -->
  
  <!-- TODO Day button -->
  <!-- TODO / Day button -->
  
  <!-- TODO AddDream button -->
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/addDreamButtonImageView"
    android:layout_width="100dp"
    android:layout_height="32dp"
    android:layout_margin="28dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/addDayButtonImageView"
    app:layout_constraintTop_toBottomOf="@id/moonPhaseTextView"
    app:srcCompat="@drawable/white_oval" />
  <!-- TODO / AddDream button -->
  
  <!-- TODO Dream button -->
  <!-- TODO / Dream button -->
  
  <!-- / Day slider -->
  
  <!-- Month slider -->
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/previousMonthImageView"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_margin="2dp"
    android:tint="@color/black"
    app:layout_constraintBottom_toBottomOf="@id/monthLabelTextView"
    app:layout_constraintEnd_toStartOf="@id/monthLabelTextView"
    app:layout_constraintTop_toTopOf="@id/monthLabelTextView"
    app:srcCompat="@drawable/arrow_left"
    app:tint="@color/black" />
  
  <!-- TODO spacing from API 21 -->
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/monthLabelTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_weight="1"
    android:gravity="center_vertical|start"
    android:letterSpacing="0.5"
    android:paddingStart="30dp"
    android:paddingLeft="30dp"
    android:paddingEnd="30dp"
    android:paddingRight="30dp"
    android:text="@string/december"
    android:textColor="@color/colorPrimary"
    android:textSize="16sp"
    android:textStyle="normal"
    app:fontFamily="sans-serif"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
  
  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/nextMonthImageView"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_margin="2dp"
    android:tint="@color/black"
    app:layout_constraintBottom_toBottomOf="@id/monthLabelTextView"
    app:layout_constraintStart_toEndOf="@id/monthLabelTextView"
    app:layout_constraintTop_toTopOf="@id/monthLabelTextView"
    app:srcCompat="@drawable/arrow_right"
    app:tint="@color/black" />
  <!-- / Month slider -->


</androidx.constraintlayout.widget.ConstraintLayout>