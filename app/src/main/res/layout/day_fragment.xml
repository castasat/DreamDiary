<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_margin="8dp"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <!-- Day -->
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/captionTextView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:fontFamily="sans-serif-black"
    android:textSize="20sp"
    android:padding="20dp"
    android:text="Страница Записи Дня"
    android:gravity="center"
    app:layout_constraintTop_toTopOf="parent"/>
  
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/dateTextView"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:padding="8dp"
    android:text="Дата: 4 Июня 2019 Вторник"
    app:layout_constraintTop_toBottomOf="@id/captionTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/moonTextView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:text="Луна: 2-е лунные сутки"
    app:layout_constraintTop_toBottomOf="@id/dateTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/afterLossTextView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:text="День цикла / после потери: 5"
    app:layout_constraintTop_toBottomOf="@id/moonTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  <!-- / Day -->
  
  <View
    android:id="@+id/dividerAfterDay"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintTop_toBottomOf="@id/afterLossTextView" />
  
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/practiceTextView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:text="Практика йоги"
    app:layout_constraintTop_toBottomOf="@id/dividerAfterDay"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  
  <View
    android:id="@+id/dividerAfterPractice"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintTop_toBottomOf="@id/practiceTextView" />
    
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/nutritionTextView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:text="Питание"
    app:layout_constraintTop_toBottomOf="@id/dividerAfterPractice"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  
  <View
    android:id="@+id/dividerAfterNutrition"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintTop_toBottomOf="@id/nutritionTextView" />
  
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/eventsTextView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:text="События дня"
    app:layout_constraintTop_toBottomOf="@id/dividerAfterNutrition"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  
  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/stressLevelTextView"
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:padding="8dp"
    android:text="Уровень стрессов"
    app:layout_constraintTop_toBottomOf="@id/eventsTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/stressLevelSeekBar" />
  
  <SeekBar
    android:id="@+id/stressLevelSeekBar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:min="0"
    android:max="100"
    android:progress="0"
    android:thumb="@drawable/ic_stress"
    app:layout_constraintTop_toBottomOf="@id/eventsTextView"
    app:layout_constraintBottom_toBottomOf="@id/stressLevelTextView"
    app:layout_constraintStart_toEndOf="@id/stressLevelTextView"
    app:layout_constraintEnd_toEndOf="parent"/>
  
  <View
    android:id="@+id/dividerAfterEvents"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintTop_toBottomOf="@id/stressLevelTextView" />
  
  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/recordDreamButton"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text=" + Записать сон"
    app:layout_constraintTop_toBottomOf="@id/dividerAfterEvents"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  
  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/addReminderTextView"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text=" + Добавить напоминание"
    app:layout_constraintTop_toBottomOf="@id/recordDreamButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
  
  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/saveDayTextView"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text=" + Записать день"
    app:layout_constraintTop_toBottomOf="@id/addReminderTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
