<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  
  <LinearLayout
    android:id="@+id/dateMoon"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:background="@color/date_moon_gray"
    android:gravity="center_vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/dateMoonBarrier">
    
    <!-- Date -->
    <TextView
      android:id="@+id/date"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="0"
      android:gravity="center_vertical|start"
      android:layout_marginStart="22dp"
      android:layout_marginLeft="22dp"
      android:layout_marginEnd="0dp"
      android:layout_marginRight="0dp"
      android:textSize="14sp"
      android:textColor="@color/colorPrimary"
      android:textStyle="bold"
      app:fontFamily="sans-serif"
      android:text="25 ноября, " />
    <!-- / Date -->
    
    <!-- Weekday -->
    <TextView
      android:id="@+id/weekDay"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical|start"
      android:layout_weight="1"
      android:layout_marginStart="0dp"
      android:layout_marginLeft="0dp"
      android:layout_marginEnd="0dp"
      android:layout_marginRight="0dp"
      android:textSize="14sp"
      android:textColor="@color/colorPrimary"
      android:textStyle="normal"
      app:fontFamily="sans-serif"
      android:text="четверг " />
    <!-- / Weekday -->
    
    <!-- Moon Phase -->
    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/moonPhase"
      android:layout_width="22dp"
      android:layout_height="22dp"
      android:layout_weight="0"
      android:layout_marginTop="11dp"
      android:layout_marginBottom="11dp"
      android:layout_marginEnd="22dp"
      android:layout_marginRight="22dp"
      android:layout_marginStart="22dp"
      android:layout_marginLeft="22dp"
      android:layout_gravity="center"
      app:srcCompat="@drawable/moon_phase_1"
      android:gravity="center_vertical|end" />
    <!-- /Moon Phase -->
  
  </LinearLayout>
</merge>
